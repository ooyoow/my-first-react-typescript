{
  "compilerOptions": {
    "outDir": ".dest-tsc",
    "sourceMap": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es5",
    "jsx": "react",
    "lib": [
      "es2017",
      "dom"
    ],
    "typeRoots": [
      "node_modules/@types"
    ],
    "strictNullChecks": true,
    "skipLibCheck": true
  },
  "include": [
    "/src/**/*"
  ]
}